<%- include("partial/header") %>
<h2>Update Page</h2>
<form action="/posts/update/<%= post._id %>" method="post">

    <label for="title">Title :</label>
    <input type="text" name="title" id="title" value="<%= post.title %>">

    <label for="content">Content :</label>
    <input type="text" name="content" id="content" value="<%= post.content%>">


    <label for="image">Image :</label>
    <input type="text" name="image" id="image" value="<%= post.image %>">

    <label for="tags">Tags :</label>
    <input type="text" name="tags" id="tags" value="<%= post.tags %>">


    <button type="submit">Update</button>

</form>

<%- include("partial/footer") %>



