

<div>
    <% posts.forEach(post => {  %>
        <div class="post">
            <div class="top">
                <img src="https://i.sstatic.net/l60Hf" alt="">
                <h2><%= post.author.username %></h2>
            </div>
            <p><%= post.title %></p>
            <div class="post-img">
                <img src=<%= post.image %> alt="">
            </div>
            <p><%= post.content%></p>
            <p><%= post.tags %></p>
        </div>
   <% }); %>
</div>